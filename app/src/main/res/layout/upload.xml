<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            />

        <Button
            android:id="@+id/upload_bt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/round"
            android:text="上传一个平板文件"
            android:textColor="@drawable/bt_textcolor"
            android:textAllCaps="true"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/upload_all_bt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/round"
            android:text="上传所有平板文件"
            android:textColor="@drawable/bt_textcolor"
            android:textAllCaps="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Spinner
                android:id="@+id/dizuo_spinner"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:spinnerMode="dropdown"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/get_dizuo_file"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/round"
                android:text="获取所有底座文件"
                android:textColor="@drawable/bt_textcolor"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/dizuo_querry"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/round"
                android:text="查询所有底座文件"
                android:textColor="@drawable/bt_textcolor"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <Button
                android:id="@+id/dizuo_upload_bt"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/round"
                android:text="上传一个底座文件"
                android:textColor="@drawable/bt_textcolor"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <Button
                android:id="@+id/dizuo_upload_all_bt"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/round"
                android:text="上传所有底座文件"
                android:textColor="@drawable/bt_textcolor"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
